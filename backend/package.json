{
  "name": "radix-backend-test",
  "version": "1.0.0",
  "description": "test-to-work-opportunity-at-radix",
  "main": "index.js",
  "author": "Ruan Lima Ribeiro",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "npm run build && ts-node-dev --respawn --transpile-only --ignore-watch node_modules ./src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:ci": "npm test -- --coverage",
    "migrate": "prisma migrate dev --name init --preview-feature --schema ./src/infra/database/prisma/schema.prisma",
    "generate": "prisma generate  --schema ./src/infra/database/prisma/schema.prisma",
    "seed": "prisma db seed --preview-feature",
    "prismaStudio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "3.8.1",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "module-alias": "^2.2.2",
    "multer": "^1.4.5-lts.1",
    "validator": "^13.6.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.22",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.11",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@types/xml2js": "^0.4.14",
    "dotenv-cli": "^4.0.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-mock-extended": "^2.0.4",
    "prisma": "^3.8.1",
    "sucrase": "^3.18.1",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "_moduleAliases": {
    "@root": ".",
    "@": "src"
  }
}
